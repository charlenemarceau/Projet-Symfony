{% extends 'base.html.twig' %}

{% block title %}Votre profil Veggie&Cook
{% endblock %}

{% block body %}
<div class="row">
	<div class="col-md-6 mx-auto text-center">
		<h1 class="my-5">Profil</h1>
		<h2 class="mt-3">
			Vos informations
		</h2>
		<div class="row">
			<div class="col-md-6">
				<h6>Votre nom</h6>
				<p>
					{{ app.user.fullName }}
				</p>
			</div>
			<div class="col-md-6">
				<h6>Votre adresse e-mail</h6>
				<p>
					{{ app.user.email }}
				</p>
			</div>
		</div>
        <div class="row">
			<div class="col-md-6">
				<h6>Parmis nous depuis le :</h6>
				<p>
					{{ app.user.createdAt ? app.user.createdAt|date('d/m/Y') : '' }}
				</p>
			</div>
			<div class="col-md-6">
				<h6>Modifier le mot de passe</h6>
				<p>
					<a href="{{ path('app_account_change_password') }}" class="btn btn-primary"> Réinitialiser le mot de passe </a>
				</p>
			</div>
		</div>
        <hr>
		<h4 class="mt-5">
			Vos recettes
		</h4>
		{% for row in app.user.recipes|batch(4) %}
			<div class="row mb-5 d-flex justify-content-center">
				{% for recipe in row %}
					<div class="col-md-4 m-6">
						<article class=" mt-3 bg-light rounded shadow recipe-box">
							<div class="mv-100 overflow-hidden">
								<a href="{{ path('recipe_show', {'id': recipe.id}) }}">
									<img src="{{ (recipe.imageName ? vich_uploader_asset(recipe) | imagine_filter('squared_thumbnail_large')) }}" alt="{{ recipe.name }}" class="recipe-img w-100 rounded-top">
								</a>
								<h4>{{ recipe.name }}
								</h4>
								<a href="{{ path('recipe_show', {'id': recipe.id}) }}" class="btn mb-3" style="background-color: #d6c0d8;">Plus de détails</a>
								{{ include('recipe/_delete_form.html.twig') }}

							</div>
						</article>
					</div>
				{% else %}
					<p class="h2 text-center mt-5">Il n'y a pas encore de recette.
						<a href="{{ path('recipe_new') }}" </a> Partage une recette !</p> </section> {% endfor %} </div> </div> {% endfor %} {% endblock %}
