{% extends 'base.html.twig' %}

{% block title %}Se connecter
{% endblock %}

{% block body %}

	<div class="row recipe-show mt-5">
		<div class="col-md-8 mt-5 mx-auto">
			<form method="post" class="mx-auto">
				{% if error %}
					<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
				{% endif %}

				{% if app.user %}
					<div>
						Vous êtes connecté en tant que
						{{ app.user.fullName }},
						<a href="{{ path('app_logout') }}">Déconnexion</a>
					</div>
				{% endif %}
				<div class="col-6 justify-items-center">
					<h1 class="mb-3 font-weight-normal">Veuillez vous connecter</h1>
					<label for="email" class="mt-2 mb-2">Email</label>
					<input type="email" value="{{ last_username }}" name="email" id="email" class="form-control" autocomplete="email" required autofocus>
					<label for="password" class="mt-2 mb-2">Mot de passe</label>
					<input type="password" name="password" id="password" class="form-control" autocomplete="current-password" required>

					<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">


					<div class="checkbox mb-3 mt-3">
						<label>
							<input type="checkbox" name="_remember_me">
							Se souvenir de moi
						</label>
					</div>
					<button class="btn btn-lg btn-primary" type="submit">
						Se connecter
					</button>
				<a href="{{ path('app_forgot_password_request')}}"> Mot de passe oublié ?</a>


					<p class="mt-5 mb-5 text-center text-muted">
						Vous n'avez pas de compte ? <a href="{{ path( 'app_register')}}"> Rejoignez nous !</a>
					</p>
				</form>
			</div>
		</div>
	</div>
{% endblock %}
