{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe
{% endblock %}

{% block body %}
	{% for flashError in app.flashes('reset_password_error') %}
		<div class="alert alert-error rounded" role="alert">{{ flashError }}</div>
	{% endfor %}
	<section class="mdp recipe-show">

		<h1 class="text-center mt-5 mb-5">Réinitialiser votre mot de passe</h1>
		<div class="row mt-5">
			<div class="col-md-6 mx-auto">
				{{ form_start(requestForm) }}
				{{ form_row(requestForm.email) }}
				<div>
					<small>
						Entrez votre adresse email et nous vous enverrons un lien pour réinitialiser votre mot de passe.
					</small>
				</div>

				<button class="btn btn-primary mt-4">Réinitialisation le mot de passe</button>
				{{ form_end(requestForm) }}
			</div>
		</div>

	</section>


{% endblock %}
