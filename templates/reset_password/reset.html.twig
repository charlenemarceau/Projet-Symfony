{% extends 'base.html.twig' %}

{% block title %}Réinitialiser le mot de passe
{% endblock %}

{% block body %}

	<div class="mt-5">
	<h1 class="text-center mt-5 mb-5">Réinitialisation du mot de passe</h1>
	<div class="row">
		<div class="col-md-6 mx-auto">
			{{ form_start(resetForm) }}
			{{ form_row(resetForm.newPassword) }}

			<button class="btn btn-primary mt-4 mx-auto">Réinitialiser</button>
			{{ form_end(resetForm) }}
		</div>
	
	</div>


	{% endblock %}
