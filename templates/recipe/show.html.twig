{% extends 'base.html.twig' %}

{% block title %}Recipe{% endblock %}

{% block body %}
    {# <h1>Recipe</h1> #}

    <div class="row mt-5">
        <div class="col-md-6 mx-auto">
            <article>
                <div>
                    <h1 class="text-center">{{ recipe.name }}</h1>
                    <img src="{{ (recipe.imageName ? vich_uploader_asset(recipe) : asset ('img/recettes/recette.jpeg') | imagine_filter('squared_thumbnail_small')) }}" alt="{{ recipe.name }}" class="w-100 rounded">
                    <h3>{{ recipe.catchline }}</h3>
                    <div class="d-flex">
                    <p>{{ recipe.ingredients }}</p>
                    <p>{{ recipe.cookTime }}</p>
                    </div>
                    <p>{{ recipe.instructions }}</p>
                    <time>{{ recipe.createdAt ? recipe.createdAt|date('d-m-Y') : '' }} {#par {{ user.username }}#}</time>
                </div>
            </article>
        </div>
    </div>


    <a href="{{ path('app_home') }}">back to list</a>

    <a href="{{ path('recipe_edit', {'id': recipe.id}) }}">edit</a>

    {{ include('recipe/_delete_form.html.twig') }}
{% endblock %}
